@page
@model SlackLab1Part3.Pages.RoleHomepages.GrantSphereFacultyModel
@{
}

<!-- ======= FACULTY DASHBOARD SECTION ======= -->
<div class="faculty-dashboard">
    <div class="dashboard-header">
        <h2><em>Welcome, <strong>Faculty Member!</strong></em></h2>

        <!-- Search Bar -->
        <div class="search-container">
            <label><img src="~/images/SearchIcon.png" alt="Search Icon"> <strong>Search:</strong></label>
            <input type="text" placeholder="Search Projects, Grants, Faculty, & Business Partners...">
        </div>
    </div>

    <!-- Grants Section -->
    <h3>Grants</h3>
    <div class="button-container">
        <form asp-page="/CreateEditView/CreateGrant">
            <button type="submit" class="dashboard-button">
                <img src="~/images/Create.png" alt="Create Icon">
                <strong>Create</strong> Grant
            </button>
        </form>

        <form asp-page="/CreateEditView/ViewGrants">
            <button type="submit" class="dashboard-button">
                <img src="~/images/Edit.png" alt="Edit Icon">
                <strong>Edit</strong> Grant
            </button>
        </form>

        <form asp-page="/CreateEditView/ViewGrants">
            <button type="submit" class="dashboard-button">
                <img src="~/images/View.png" alt="View Icon">
                <strong>View</strong> Grants
            </button>
        </form>
    </div>

    <!-- Projects Section -->
    <h3>Projects</h3>
    <div class="button-container">
        <form asp-page="/CreateEditView/ViewProjects">
            <button type="submit" class="dashboard-button">
                <img src="~/images/View.png" alt="View Icon">
                <strong>View</strong> Projects
            </button>
        </form>
    </div>
</div>

<!-- ======= FACULTY DASHBOARD STYLES ======= -->
<style>
    /* Faculty Dashboard Container */
    .faculty-dashboard {
        background: white;
        width: 90%;
        max-width: 1000px;
        margin: 50px auto;
        padding: 20px;
        border-radius: 8px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        border: 1px solid #ccc;
    }

    /* Align the Header and Search Bar in One Row */
    .dashboard-header {
        display: flex;
        justify-content: space-between; /* Moves search to the right */
        align-items: center;
    }

    /* Search Bar (Aligned Right) */
    .search-container {
        display: flex;
        align-items: center;
    }

    .search-container img {
        height: 16px;
        margin-right: 5px;
    }

    .search-container input {
        flex: 1;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        width: 300px;
    }

    /* Button Container */
    .button-container {
        display: flex;
        gap: 20px;
        flex-wrap: wrap;
    }

    /* Dashboard Buttons */
    .dashboard-button {
        display: flex;
        align-items: center;
        justify-content: flex-start;
        padding: 15px;
        width: 250px;
        border-radius: 5px;
        border: 1px solid #000;
        background: linear-gradient(to bottom, #f9f9f9, #e0e0e0);
        font-size: 18px;
        cursor: pointer;
        transition: background 0.2s ease-in-out;
    }

    .dashboard-button img {
        height: 40px;
        margin-right: 10px;
    }

    .dashboard-button:hover {
        background: #dcdcdc;
    }
</style>
